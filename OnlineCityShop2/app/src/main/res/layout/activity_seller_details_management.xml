<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SellerDetailsManagement">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@color/white"
        android:elevation="5dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/back"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="15dp"
            android:background="@drawable/ic_arrow"
            android:backgroundTint="@color/purple"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="Details"
            android:textSize="25dp"
            android:textColor="@color/purple"
            android:fontFamily="@font/serif_family"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="15dp"
                android:text="Shop Banner"
                android:textColor="@color/gray"
                android:textSize="15dp"
                android:fontFamily="@font/serif_family"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp">

                <ImageView
                    android:id="@+id/image_banner"
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    android:layout_marginStart="15dp"
                    android:layout_alignParentStart="true"
                    android:src="@drawable/fruits"
                    android:scaleType="centerCrop"
                    android:background="@drawable/white_card"
                    android:outlineProvider="background"/>

                <Button
                    android:id="@+id/choose"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="10dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:background="@drawable/gray_border"
                    android:text="Choose"
                    android:textSize="20dp"
                    android:textColor="@color/gray"
                    android:textAllCaps="false"
                    android:fontFamily="@font/serif_family"/>

            </RelativeLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#efeeee"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Shop Details"
                    android:textSize="15dp"
                    android:textColor="@color/gray"
                    android:fontFamily="@font/serif_family"/>

                <EditText
                    android:id="@+id/f_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:hint="Name"
                    android:textColor="@color/gray_purple_edittext"
                    android:textSize="20dp"
                    android:maxLines="1"
                    android:fontFamily="@font/serif_family"
                    android:backgroundTint="@color/gray_purple"/>

                <EditText
                    android:id="@+id/f_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:hint="Description"
                    android:textColor="@color/gray_purple_edittext"
                    android:textSize="20dp"
                    android:maxLines="1"
                    android:fontFamily="@font/serif_family"
                    android:backgroundTint="@color/gray_purple"/>

                <EditText
                    android:id="@+id/f_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:hint="Address"
                    android:textColor="@color/gray_purple_edittext"
                    android:textSize="20dp"
                    android:maxLines="1"
                    android:fontFamily="@font/serif_family"
                    android:backgroundTint="@color/gray_purple"/>

                <EditText
                    android:id="@+id/f_service_city"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:hint="Service City"
                    android:textColor="@color/gray_purple_edittext"
                    android:textSize="20dp"
                    android:maxLines="1"
                    android:fontFamily="@font/serif_family"
                    android:backgroundTint="@color/gray_purple"/>

                <EditText
                    android:id="@+id/f_contact_no"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:inputType="phone"
                    android:hint="Contact No"
                    android:textColor="@color/gray_purple_edittext"
                    android:textSize="20dp"
                    android:maxLines="1"
                    android:fontFamily="@font/serif_family"
                    android:backgroundTint="@color/gray_purple"/>

                <EditText
                    android:id="@+id/f_gst_no"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:hint="GST No"
                    android:textColor="@color/gray_purple_edittext"
                    android:textSize="20dp"
                    android:maxLines="1"
                    android:fontFamily="@font/serif_family"
                    android:backgroundTint="@color/gray_purple"/>

            </LinearLayout>

            <Button
                android:id="@+id/f_update"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Update"
                android:textAllCaps="false"
                android:layout_marginStart="10dp"
                android:background="@drawable/green_border_background"
                android:backgroundTint="@color/pricegreen"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:fontFamily="@font/serif_family"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"/>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>