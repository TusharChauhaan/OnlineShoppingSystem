<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:orientation="vertical">

                <Button
                    android:id="@+id/edit_button"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="end"
                    android:background="@drawable/white_card"
                    android:backgroundTint="@color/purple_white"
                    android:text="Edit"
                    android:textSize="20dp"
                    android:textAllCaps="false"
                    android:textColor="@color/white_purple"
                    android:fontFamily="@font/serif_family"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Hii,"
                    android:textSize="40dp"
                    android:textColor="@color/gray"
                    android:fontFamily="@font/serif_family"/>

                <TextView
                    android:id="@+id/user_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Bhavin Prajapat"
                    android:textSize="30dp"
                    android:textColor="@color/purple"
                    android:fontFamily="@font/serif_family"/>

                <TextView
                    android:id="@+id/user_contact"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="7014316242"
                    android:textSize="20dp"
                    android:textColor="@color/gray"
                    android:fontFamily="@font/serif_family"/>
                <TextView
                    android:id="@+id/user_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="bhavin7014316242@gmail.com"
                    android:textSize="20dp"
                    android:textColor="@color/gray"
                    android:fontFamily="@font/serif_family"/>



            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:src="#efeeee"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:text="Past Orders"
                android:textSize="15dp"
                android:textFontWeight="1000"
                android:textColor="@color/gray"
                android:fontFamily="@font/serif_family"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/past_orders_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">

                </LinearLayout>

                <Button
                    android:id="@+id/logout_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="30dp"
                    android:paddingStart="30dp"
                    android:paddingEnd="30dp"
                    android:text="Logout"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:textAllCaps="false"
                    android:textFontWeight="1000"
                    android:fontFamily="@font/serif_family"
                    android:background="@drawable/login_button"/>
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</FrameLayout>